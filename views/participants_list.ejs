<%- include('partials/header', { title: 'Participants List' }) %>

<main class="page-content-wrapper">
    
    <div class="page-header-container" style="justify-content: flex-start; gap: 30px;">
        <h2 class="page-title" style="font-size: 2rem; margin: 0;">
            Participants for Event: <span class="text-cyan"><%= event.title %></span>
        </h2>
        
        <a href="/competitions/<%= event.competition_id %>" class="action-btn btn-secondary-custom" style="width: auto; padding: 10px 20px;">
            Back to Competition
        </a>
    </div>

    <div class="table-container" style="margin-top: 20px;">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Role</th>
                    <th>NDCA Number</th>
                </tr>
            </thead>
            <tbody>
                <% participants.forEach(p=> { %>
                    <tr>
                        <td>
                            <%= p.first_name %>
                                <%= p.last_name %>
                        </td>
                        <td>
                            <span class="role-badge" style="background-color: rgba(0, 255, 255, 0.2);">
                                <%= p.lead ? 'Lead' : 'Follow' %>
                            </span>
                        </td>
                        <td>
                            <%= p.ndca_number || '-' %>
                        </td>
                    </tr>
                    <% }) %>
                        <% if (participants.length===0) { %>
                            <tr>
                                <td colspan="3" style="text-align: center; color: #FF4500;">
                                    No participants registered yet.
                                </td>
                            </tr>
                            <% } %>
            </tbody>
        </table>
    </div>
</main>

<%- include('partials/footer') %>