<%- include('partials/header', { title: 'Participants List' }) %>

    <main class="container mt-4 flex-grow-1">
        <h2>Participants for Event: <%= event.title %>
        </h2>
        <a href="/competitions/<%= event.competition_id %>" class="btn btn-secondary mb-3">Back to Competition</a>

        <table class="table table-striped shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Role</th>
                    <th>NDCA Number</th>
                </tr>
            </thead>
            <tbody>
                <% participants.forEach(p=> { %>
                    <tr>
                        <td>
                            <%= p.first_name %>
                                <%= p.last_name %>
                        </td>
                        <td>
                            <%= p.lead ? 'Lead' : 'Follow' %>
                        </td>
                        <td>
                            <%= p.ndca_number || '-' %>
                        </td>
                    </tr>
                    <% }) %>
                        <% if (participants.length===0) { %>
                            <tr>
                                <td colspan="3">No participants registered yet.</td>
                            </tr>
                            <% } %>
            </tbody>
        </table>
    </main>
<%- include('partials/footer') %>