<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Event Participants</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Ballroom Admin</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/users">Users</a>
                <a class="nav-link" href="/competitions">Competitions</a>
                <a class="nav-link" href="/logout">Logout</a>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <h2>Participants for Event: <%= event.title %>
        </h2>
        <a href="/competitions/<%= event.competition_id %>" class="btn btn-secondary mb-3">Back to Competition</a>

        <table class="table table-striped shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Role</th>
                    <th>NDCA Number</th>
                </tr>
            </thead>
            <tbody>
                <% participants.forEach(p=> { %>
                    <tr>
                        <td>
                            <%= p.first_name %>
                                <%= p.last_name %>
                        </td>
                        <td>
                            <%= p.lead ? 'Lead' : 'Follow' %>
                        </td>
                        <td>
                            <%= p.ndca_number || '-' %>
                        </td>
                    </tr>
                    <% }) %>
                        <% if (participants.length===0) { %>
                            <tr>
                                <td colspan="3">No participants registered yet.</td>
                            </tr>
                            <% } %>
            </tbody>
        </table>
    </main>
</body>

</html>