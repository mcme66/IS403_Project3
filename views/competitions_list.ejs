<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Ballroom Competition</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Ballroom Admin</a>
      <div class="navbar-nav">
        <a class="nav-link" href="/users">Users</a>
        <a class="nav-link" href="/competitions">Competitions</a>
        <a class="nav-link" href="/events">Events</a>
        <a class="nav-link" href="/logout">Logout</a>
      </div>
    </div>
  </nav>

  <main class="container mt-4">

<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Competitions</h2>
  <% if (user && user.isOrganizer) { %>
    <a href="/competitions/add" class="btn btn-success">+ Add Competition</a>
  <% } %>
</div>

<table class="table table-striped shadow-sm">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Organizer ID</th>
      <th>Location</th>
      <th>Sanctioned</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% competitions.map(c => { %>
    <tr>
      <td><%= c.competition_id %></td>
      <td><%= c.organizer_id || '-' %></td>
      <td><%= c.location %></td>
      <td><%= c.sanctioned ? '✅' : '❌' %></td>
      <td>
        <a href="/competitions/edit/<%= c.competition_id %>" class="btn btn-sm btn-warning">Edit</a>
        <a href="/competitions/delete/<%= c.competition_id %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete this competition?')">Delete</a>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

  </main>
</body>
</html>