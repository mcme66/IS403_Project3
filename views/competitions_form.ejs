<%- include('partials/header', { title: competition.Competition_ID ? 'Edit Competition' : 'Add Competition' }) %>

  <!-- Main Content Wrapper -->
  <main class="container mt-4 flex-grow-1">
    <h2><%= competition.Competition_ID ? 'Edit Competition' : 'Add Competition' %></h2>
    <form action="<%= action %>" method="POST" class="card p-4 shadow-sm">
      <div class="mb-3">
        <label class="form-label">Organizer ID</label>
        <input class="form-control" name="organizer_id" value="<%= competition.Organizer_ID || '' %>">
        <div class="form-text">Leave blank if this is your competition.</div>
      </div>

      <div class="mb-3">
        <label class="form-label">Location</label>
        <input class="form-control" name="location" value="<%= competition.Location || '' %>" required>
      </div>

      <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="sanctioned" <%= competition.Sanctioned ? 'checked' : '' %>>
        <label class="form-check-label">Sanctioned Competition</label>
      </div>

      <button class="btn btn-primary">Save</button>
      <a href="/competitions" class="btn btn-secondary">Cancel</a>
    </form>
  </main>

<%- include('partials/footer') %>