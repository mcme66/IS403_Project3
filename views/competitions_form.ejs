<%- include('partials/header', { title: competition.Competition_ID ? 'Edit Competition' : 'Add Competition' }) %>

  <!-- Main Content Wrapper -->
  <main class="page-content-wrapper">
    <h2 class="page-title" style="text-align: center; font-size: 2rem; margin-bottom: 30px;"><%= competition.Competition_ID ? 'Edit Competition' : 'Add Competition' %></h2>
    <form action="<%= action %>" method="POST" class="frosted-form-card">

      <div class="form-group-custom">
        <label class="form-label-custom">Organizer ID</label>
        <input class="input-field" name="organizer_id" value="<%= user.organizer_id || '' %>" readonly>
        <div class="lead-custom" style="font-size: 0.9em; margin-top: 5px;">Leave blank if this is your competition.</div>
      </div>

      <div class="form-group-custom">
        <label class="form-label-custom">Location</label>
        <input class="input-field" name="location" value="<%= competition.Location || '' %>" required>
      </div>

      <div class="form-check-custom">
        <input class="check-input-custom" type="checkbox" name="sanctioned" <%= competition.Sanctioned ? 'checked' : '' %>>
        <label class="check-label-custom" for="sanctioned-check">Sanctioned Competition</label>
      </div>

      <div style="margin-top: 30px; text-align: center;">
        <button type="submit" class="action-btn btn-view save-btn-custom" style="width: 150px;">
          Save
        </button>
            
        <a href="/competitions" class="action-btn btn-secondary-custom" style="width: 150px; margin-left: 15px;">
          Cancel
        </a>
      </div>
    </form>
  </main>

<%- include('partials/footer') %>