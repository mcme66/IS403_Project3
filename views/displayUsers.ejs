<%- include('partials/header', { title: 'Users List' }) %>

    <main class="page-content-wrapper">
    <div class="page-header-container">
      <h2 class="page-title" style="font-size: 2rem; margin: 0;">Registered Users</h2>
      <a href="/users/add" class="action-btn add-btn-custom">+ Add User</a>
    </div>

    <% if (users.length===0) { %>
      <div class="alert-custom alert-warning-custom text-center">No users found.</div>
      <% } else { %>
        <div class="table-container"></div>
          <table class="styled-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Username</th>
                <th>Phone</th>
                <th>Birthday</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(user=> { %>
                <tr>
                  <td>
                    <%= user.user_id %>
                  </td>
                  <td>
                    <%= user.first_name %>
                      <%= user.last_name %>
                  </td>
                  <td>
                    <%= user.username %>
                  </td>
                  <td>
                    <%= user.phone_number || 'N/A' %>
                  </td>
                  <td>
                    <%= user.birthday || 'N/A' %>
                  </td>
                  <td>
                    <a href="/users/edit/<%= user.user_id %>" class="action-btn btn-edit">Edit</a>
                    <a href="/users/delete/<%= user.user_id %>" class="action-btn btn-delete"
                      onclick="return confirm('Delete this user?')">Delete</a>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
          </div>
          <% } %>
            <div style="text-align: center; margin-top: 30px;"></div>
              <a href="/" class="action-btn btn-secondary-custom" style="width: 200px;">Back to Dashboard</a>
            </div>
  </main>
<%- include('partials/footer') %>