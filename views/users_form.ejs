<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= user.User_ID ? 'Edit User' : 'Add User' %></title>
  
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
  
  <link rel="stylesheet" href="/styles.css">
</head>

<body class="ballroom-bg-management">
  
  <main class="page-content-wrapper" style="padding-top: 60px;">
    
    <h2 class="page-title" style="text-align: center; font-size: 2rem; margin-bottom: 30px;">
      Add User
    </h2>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert-custom alert-warning-custom text-center mb-4">
      <%= error %>
      </div>
    <% } %>
    
    <form action="<%= action %>" method="POST" class="frosted-form-card">
      
      <div class="form-row-custom">
        <div class="half-width">
          <label class="form-label-custom">First Name</label>
          <input class="input-field" name="first_name" value="<%= user.first_name || '' %>" required>
        </div>
        <div class="half-width">
          <label class="form-label-custom">Last Name</label>
          <input class="input-field" name="last_name" value="<%= user.last_name || '' %>" required>
        </div>
      </div>
      
      <div class="form-row-custom">
        <div class="half-width">
          <label class="form-label-custom">Username</label>
          <input class="input-field" name="username" value="<%= user.username || '' %>" required>
        </div>
        <div class="half-width">
          <label class="form-label-custom">Password</label>
          <input class="input-field" type="password" name="password" value="<%= user.password || '' %>" required>
        </div>
      </div>
      
      <div class="form-group-custom">
        <label class="form-label-custom">Confirm Password</label>
        <input class="input-field" type="password" id="confirmPassword" required>
        <div id="passwordError" class="text-danger small mt-1" style="color: #FF4500; font-size: 0.9rem; margin-top: 5px; display:none;">
          Passwords do not match.
        </div>
      </div>

      <div class="form-row-custom">
        <div class="half-width">
          <label class="form-label-custom">Phone</label>
          <input class="input-field" name="phone_number" value="<%= user.phone_number || '' %>">
        </div>
        <div class="half-width">
          <label class="form-label-custom">Birthday</label>
          <input type="date" class="input-field" name="birthday" value="<%= user.birthday ? new Date(user.birthday).toISOString().split('T')[0] : '' %>">
        </div>
      </div>

      <div class="form-group-custom">
        <label class="form-label-custom">Role</label>
        <select id="role" name="role" class="input-field">
          <option value="User">User</option>
          <option value="Judge">Judge</option>
          <option value="Dancer">Dancer</option>
          <option value="Organizer">Organizer</option>
        </select>
      </div>

      <div id="role-fields" class="form-group-custom"></div>

      <div style="text-align: center; margin-top: 40px;">
        <button type="submit" class="action-btn btn-view save-btn-custom" style="width: 150px;">
          Save
        </button>
        <a href="/users" class="action-btn btn-secondary-custom" style="width: 150px; margin-left: 15px;">
          Cancel
        </a>
      </div>
    </form>
  </main>

<script>
  document.getElementById("role").addEventListener("change", function () {
    const role = this.value;
    const container = document.getElementById("role-fields");
    container.innerHTML = "";

    if (role === "Judge") {
      container.innerHTML = `
        <div class="form-group-custom">
          <label class="form-label-custom">Add Code (required)</label>
          <input class="input-field" name="add_code" required>
        </div>
        <div class="form-check-custom">
          <input class="check-input-custom" type="checkbox" name="ISTD_certified" id="istd-check">
          <label class="check-label-custom" for="istd-check">ISTD Certified</label>
        </div>`;
    }

    else if (role === "Dancer") {
      container.innerHTML = `
        <div class="form-group-custom">
          <label class="form-label-custom">NDCA Number</label>
          <input class="input-field" name="NDCA_number">
        </div>
        <div class="form-group-custom">
          <label class="form-label-custom">NDCA Expiration</label>
          <input type="date" class="input-field" name="NDCA_expiration">
        </div>
        <div class="form-group-custom">
          <label class="form-label-custom">Type</label>
          <input class="input-field" name="Type">
        </div>`;
    }

    else if (role === "Organizer") {
      container.innerHTML = `
        <div class="form-group-custom">
          <label class="form-label-custom">Add Code (required)</label>
          <input class="input-field" name="add_code" required>
        </div>
        <div class="form-check-custom">
          <input class="check-input-custom" type="checkbox" name="Recognized" id="recognized-check">
          <label class="check-label-custom" for="recognized-check">Recognized Organizer</label>
          <input class="input-field" name="Type">
        </div>`;
    }

    else if (role === "Organizer") {
      container.innerHTML = `
        <div class="form-group-custom">
          <label class="form-label-custom">Add Code (required)</label>
          <input class="input-field" name="add_code" required>
        </div>
        <div class="form-check-custom">
          <input class="check-input-custom" type="checkbox" name="Recognized" id="recognized-check">
          <label class="check-label-custom" for="recognized-check">Recognized Organizer</label>
        </div>`;
    }

    else {
      container.innerHTML = "";
    }
  });
</script>

<script>
  const form = document.querySelector("form");
  const passwordInput = document.querySelector("input[name='password']");
  const confirmInput = document.getElementById("confirmPassword");
  const errorMsg = document.getElementById("passwordError");

  form.addEventListener("submit", function(e) {
  if (passwordInput.value !== confirmInput.value) {
    e.preventDefault();
    errorMsg.style.display = "block";
    confirmInput.style.borderColor = '#FF4500'; // Highlight border on error
  } else {
    errorMsg.style.display = "none";
    confirmInput.style.borderColor = ''; // Reset border
  }
  });
</script>
</body>
</html>