<%- include('partials/header', { title: 'Dancer Dashboard' }) %>

<main class="page-content-wrapper">
    <h1 class="page-title" style="text-align: center; font-size: 2rem; margin-bottom: 30px;"> My Dashboard (Dancer)</h1>

    <div class="content-card">

        <div class="card-title-header" style="font-size: 2.5rem; margin-bottom: 25px;">
            My Registered Events
        </div>
        <div class="table-container" style="border: none; box-shadow: none;">
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>Competition</th>
                            <th>Event</th>
                            <th>Role</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% registrations.forEach(reg=> { %>
                            <tr>
                                <td>
                                    <%= reg.comp_location %>
                                </td>
                                <td>
                                    <%= reg.event_title %>
                                </td>
                                <td>
                                    <%= reg.lead ? 'Lead' : 'Follow' %>
                                </td>
                                <td>
                                    <%= reg.start_date_time ? new Date(reg.start_date_time).toLocaleString() : '-' %>
                                </td>
                                <td>
                                    <form action="/events/unregister" method="POST"
                                        onsubmit="return confirm('Unregister from this event?')">
                                        <input type="hidden" name="event_id" value="<%= reg.event_id %>">
                                        <input type="hidden" name="competition_id" value="<%= reg.competition_id %>">
                                        <button type="submit" class="action-btn btn-delete">Unregister</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                                <% if (registrations.length===0) { %>
                                    <tr>
                                        <td colspan="5" class="text-center p-3" style="text-align: center;">You are not registered for any events.
                                            <a href="/competitions" class="alert-link-custom">Find a competition to register!</a></td>
                                    </tr>
                                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
<%- include('partials/footer') %>