<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Dancer Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Ballroom Admin</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/users">Users</a>
                <a class="nav-link" href="/competitions">Competitions</a>
                <a class="nav-link active" href="#">Dashboard</a>
                <a class="nav-link" href="/logout">Logout</a>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <h1>My Dashboard (Dancer)</h1>

        <div class="card shadow-sm mt-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">My Registered Events</h4>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Competition</th>
                            <th>Event</th>
                            <th>Role</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% registrations.forEach(reg=> { %>
                            <tr>
                                <td>
                                    <%= reg.comp_location %>
                                </td>
                                <td>
                                    <%= reg.event_title %>
                                </td>
                                <td>
                                    <%= reg.lead ? 'Lead' : 'Follow' %>
                                </td>
                                <td>
                                    <%= reg.start_date_time ? new Date(reg.start_date_time).toLocaleString() : '-' %>
                                </td>
                                <td>
                                    <form action="/events/unregister" method="POST"
                                        onsubmit="return confirm('Unregister from this event?')">
                                        <input type="hidden" name="event_id" value="<%= reg.event_id %>">
                                        <input type="hidden" name="competition_id" value="<%= reg.competition_id %>">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Unregister</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                                <% if (registrations.length===0) { %>
                                    <tr>
                                        <td colspan="5" class="text-center p-3">You are not registered for any events.
                                            <a href="/competitions">Find a competition to register!</a></td>
                                    </tr>
                                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</body>

</html>