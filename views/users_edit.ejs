<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= user.User_ID ? 'Edit User' : 'Add User' %></title>
  
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
  
  <link rel="stylesheet" href="/styles.css">
</head>

<body class="ballroom-bg-management">
  
  <main class="page-content-wrapper" style="padding-top: 60px;">
    
    <h2 class="page-title" style="text-align: center; font-size: 2rem; margin-bottom: 30px;">
      <%= user.user_id ? 'Edit User' : 'Add New User' %>
    </h2>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert-custom alert-warning-custom text-center mb-4">
      <%= error %>
      </div>
    <% } %>
    
    <form action="<%= action %>" method="POST" class="frosted-form-card">
      
      <div class="form-row-custom">
        <div class="half-width">
          <label class="form-label-custom">First Name</label>
          <input class="input-field" name="first_name" value="<%= user.first_name || '' %>" required>
        </div>
        <div class="half-width">
          <label class="form-label-custom">Last Name</label>
          <input class="input-field" name="last_name" value="<%= user.last_name || '' %>" required>
        </div>
      </div>
      
      <div class="form-row-custom">
        <div class="half-width">
          <label class="form-label-custom">Phone</label>
          <input class="input-field" name="phone_number" value="<%= user.phone_number || '' %>">
        </div>
        <div class="half-width">
          <label class="form-label-custom">Birthday</label>
          <input type="date" class="input-field" name="birthday" value="<%= user.birthday ? new Date(user.birthday).toISOString().split('T')[0] : '' %>">
        </div>
      </div>

      <div style="text-align: center; margin-top: 40px;">
        <button type="submit" class="action-btn btn-secondary-custom" style="width: 150px;">
          Save
        </button>
        <a href="/users" class="action-btn btn-secondary-custom" style="width: 150px; margin-left: 15px;">
          Cancel
        </a>
      </div>
    </form>
  </main>
</body>
</html>