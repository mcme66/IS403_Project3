              <a href="/dashboard/dancer" class="btn btn-success">My Dashboard</a>
            </div>
          </div>
        </div>
        <% } %>
          <% if (user.isOrganizer) { %>
            <div class="col-md-4">
              <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                  <h5 class="card-title">Organizer Dashboard</h5>
                  <p class="card-text">Manage your competitions and participants.</p>
                  <a href="/dashboard/organizer" class="btn btn-warning">My Dashboard</a>
                </div>
              </div>
            </div>
              <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                  <div class="card-body text-center">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Manage registered users and participants.</p>
                    <a href="/users" class="btn btn-primary">View Users</a>
                  </div>
                </div>
              </div>
               <% } %>
    </div>
  </div>
  </main>

