<%- include('partials/header') %>

<main class="flex-grow-1">
  <!-- Hero Section -->
  <section class="py-5 text-center bg-primary text-white">
    <div class="container">
      <h1 class="fw-bold mb-3">Welcome to the Ballroom Management System</h1>
      <p class="lead">Easily manage competitions, events, and participants â€” all in one place.</p>
    </div>
  </section>

  <!-- Main Content -->
  <div class="container my-5">
    <div class="row g-4">
      <div class="col-md-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body text-center">
            <h5 class="card-title">Competitions</h5>
