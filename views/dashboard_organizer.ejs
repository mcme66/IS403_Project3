<%- include('partials/header', { title: 'Organizer Dashboard' }) %>

    <main class="page-content-wrapper">
        <h1 class="page-title" style="text-align: center; font-size: 2rem; margin-bottom: 30px;">My Dashboard (Organizer)</h1>

        <div class="content-card">
            <div class="card-title-header" style="font-size: 2.5rem; margin-bottom: 25px;">
                My Competitions
            </div>
            <div style="text-align: right; margin-bottom: 20px;">
                <a href="/competitions/add" class="btn add-btn-custom">+ New Competition</a>
            </div>
            <div class="card-body-custom" style="padding: 0;">
                <% competitions.forEach(comp=> { %>
                    <div class="sub-content-card mb-4">

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="card-title-header" style="font-size: 1.8rem; margin-bottom: 0;">
                                <%= comp.location %>
                            </h5>
                            <br>
                            <divclass="action-group">
                                <a href="/competitions/<%= comp.competition_id %>" class="btn btn-view">View
                                    Details</a>
                                <a href="/competitions/edit/<%= comp.competition_id %>"
                                    class="btn btn-edit">Edit</a>
                            </div>
                        </div>

                        <h6 class="lead-custom mt-3" style="font-size: 1rem; color: #00FFFF; margin-bottom: 10px;">Events:</h6>
                        
                        <ul class="custom-list-group">
                            <% const compEvents=events.filter(e=> e.competition_id === comp.competition_id); %>
                                <% compEvents.forEach(e=> { %>
                                    <li class="custom-list-item">
                                        <span class="text-cyan">
                                            <%= e.title %>
                                        </span>
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-secondary rounded-pill me-2">
                                                <%= e.participant_count %> Participants
                                            </span>
                                            <a href="/events/<%= e.event_id %>/participants"
                                                class="btn btn-view">View/Manage</a>
                                        </div>
                                    </li>
                                    <% }) %>
                                        <% if (compEvents.length===0) { %>
                                            <li class="custom-list-item text-muted">No events created yet.</li>
                                            <% } %>
                        </ul>
                    </div>
                    <% }) %>
                        <% if (competitions.length===0) { %>
                            <p class="lead-custom text-center">You haven't created any competitions yet.</p>
                            <% } %>
            </div>
        </div>
    </main>
<%- include('partials/footer') %>